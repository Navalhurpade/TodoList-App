<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <% for (let i=0; i<newListItems.length; i++) { %>
      <form class="" action="/delete" method="post">
       <div class="item">
        <input type="hidden" name="listTitleIndelete" value="<%= listTitle %>">
        <input type="checkbox" onchange="this.form.submit()" name="index" value="<%= i %>">
        <p><%=  newListItems[i] %></p>
       </div>
    </form>
      <% } %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <input type="hidden" name="listTitle" value="<%= listTitle %>">
        <button type="submit" name="list">+</button>
      </form>
  </div>

<%- include("footer") -%>
